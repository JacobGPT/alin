{
  "name": "alin-platform",
  "version": "1.0.0",
  "description": "ALIN - Advanced Linguistic Intelligence Network - Monorepo",
  "private": true,
  "workspaces": [
    "core",
    "public",
    "private"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=public",
    "dev:public": "npm run dev --workspace=public",
    "dev:private": "npm run dev --workspace=private",
    "dev:server": "npm run dev:server --workspace=public",
    "dev:vite": "npm run dev:vite --workspace=public",
    "build": "npm run build --workspace=public",
    "start": "npm run start --workspace=public",
    "start:public": "npm run start --workspace=public",
    "start:private": "npm run start --workspace=private",
    "type-check": "npm run type-check --workspace=public",
    "test": "npm run test --workspace=public",
    "lint": "npm run lint --workspace=public"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
